@model CategoryEditViewModel

<div class="container">
    <form asp-action="Edit" class="p-4 shadow rounded bg-light" style="max-width: 600px; margin: auto;">
        <h4 class="mb-4">Редагування категорії</h4>

        <!-- Назва категорії -->
        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" type="text" class="form-control" placeholder="Виберіть категорію" readonly data-bs-toggle="modal" data-bs-target="#categoryModal">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <!-- Опис -->
        <div class="mb-3">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description" class="form-control" rows="4" placeholder="Оновіть опис категорії"></textarea>
        </div>

        <!-- Зображення (URL) -->
        <div class="mb-3">
            <label asp-for="ImageUrl" class="form-label"></label>
            <input asp-for="ImageUrl" type="url" class="form-control" placeholder="https://example.com/updated-image.jpg">
        </div>

        <!-- Кнопки -->
        <button type="submit" class="btn btn-warning">Зберегти зміни</button>
        <a asp-action="Index" class="btn btn-secondary">Скасувати</a>
    </form>
</div>

@await Html.PartialAsync("_CategoryModal", ViewBag.Categories as List<string>)

@section Scripts {
    <script src="/js/categoryModal.js"></script>
}