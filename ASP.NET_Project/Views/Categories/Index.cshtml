@model List<ASP.NET_Project.Models.Category.CategoryItemViewModel>

<div class="container mt-5">
    <h2 class="text-center mb-4">Категорії мультфільмів</h2>
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <img src="@item.Image" class="card-img-top" alt="@item.Name" style="height: 200px; object-fit: cover;">
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text">@item.Description</p>
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="d-flex justify-content-center gap-3 mt-4">
        <a href="@Url.Action("Create")" class="btn btn-outline-primary rounded-pill px-4 py-2">
            Додати категорію
        </a>
        <a href="@Url.Action("Edit")" class="btn btn-outline-secondary rounded-pill px-4 py-2">
            Редагувати категорії
        </a>
        <a href="@Url.Action("Delete")" class="btn btn-outline-danger rounded-pill px-4 py-2">
            Видалити категорію
        </a>
    </div>
</div>